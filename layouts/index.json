{{- $.Scratch.Add "index" slice -}}
{{- range where .Site.RegularPages "Section" "posts" -}}
    {{- $post := dict "title" .Title "summary" .Summary "content" .Plain "tags" .Params.tags "date" (.Date.Format "2006-01-02") "url" .Permalink -}}
    {{- $.Scratch.Add "index" $post -}}
{{- end -}}
{
    "posts": {{ $.Scratch.Get "index" | jsonify }}
}
